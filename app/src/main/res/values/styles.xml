<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="editText_phone">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">number</item>
        <item name="android:hint">@string/input_mobile_hint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:maxLength">13</item>
        <item name="android:textColor">@color/color_text1</item>
        <item name="android:textColorHint">@color/color_text4</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="editText_code">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">number</item>
        <item name="android:hint">@string/input_code_hint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColor">@color/color_text1</item>
        <item name="android:textColorHint">@color/color_text4</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="login_btn">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/login_btn_click_style</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btn_read_bg_enable</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="InitTheme" parent="AppTheme.NoActionBar" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!--底部弹出框-->
    <style name="common_bottomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/common_DialogAnimation</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="common_DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/common_push_up_in</item>
        <item name="android:windowExitAnimation">@anim/common_push_down_out</item>
    </style>
    <style name="text_11_999999">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="DaoxilaDialog.Alert" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@mipmap/bg_alert_dialog</item>
        <item name="android:windowBackground">@mipmap/bg_alert_dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/AlertDialogAnimation</item>
    </style>
    <style name="AlertDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_out_to_bottom</item>
    </style>
    <style name="main_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_enter_bg_select</item>
        <item name="android:textColor">@drawable/btn_enter_text_select</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="dialogChatPwdWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/colorTran</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item><!--显示软件盘-->
    </style>
    <style name="ani_bottom_pay_pwd" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_in_150</item>  <!--进入时的动画-->
        <item name="android:windowExitAnimation">@anim/pop_out</item>    <!--退出时的动画-->
    </style>
    <style name="text_15_000000">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/colorTran</item>
    </style>
    <style name="ani_bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>  <!--进入时的动画-->
        <item name="android:windowExitAnimation">@anim/pop_out</item>    <!--退出时的动画-->
    </style>
    <style name="NoSpaceActionBarTheme" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>
    <style name="verify_btn">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/round_theme_22</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btn_read_text_color_enable</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
